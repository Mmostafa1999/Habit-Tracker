{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["src", "lib", "tsconfig.json", "../api/index.js"],
  "exclude": ["lib"]
}
